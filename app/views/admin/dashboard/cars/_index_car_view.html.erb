<div class="w-full md:max-w-xs lg:max-w-sm" id="cars_car_card-<%= car.id %>" data-controller="transition">
  <%= signal_flowbite_reinit %>
  <div class="rounded-lg shadow-lg w-full bg-cultured flex-justify-center <%= car.discarded? ? 'bg-red-100' : 'bg-cultured' %>">
    <div class="rounded-t-lg">
      <%= render partial: 'common/cars/car/carousel', locals: { car: car } %>
    </div>
    <div class="p-6">
      <h5 class="text-gray-900 text-lg font-medium mb-2 break-words">
        <%= I18n.t("cars.brands.#{car.brand}") %>
        <%= car.name %>
      </h5>
      <ul>
        <li>
          <%= Car.human_attribute_name(:price_in_eur) %> :
          <%= car.price_in_eur %> <%= I18n.t('units.currency.eur.plural') %>
        </li>
        <li>
          <%= Car.human_attribute_name(:deposit) %> :
          <%= car.deposit %> <%= I18n.t('units.currency.eur.plural') %>
        </li>
        <li>
          <%= Car.human_attribute_name(:engine_type) %> :
          <%= I18n.t("cars.engine_types.#{car.engine_type}") %>
        </li>
        <li>
          <%= Car.human_attribute_name(:transmission) %> :
          <%= I18n.t("cars.transmission_types.#{car.transmission}") %>
        </li>
        <li>
            <span>
            <%= Car.human_attribute_name(:gas_consumption_range) %>:
            </span>
          <br>
          <span>
            <%= number_with_precision(car.gas_consumption_range.begin, precision: 1, strip_insignificant_zeros: true) %>
            - <%= number_with_precision(car.gas_consumption_range.end, precision: 1, strip_insignificant_zeros: true) %> <%= I18n.t('units.volumetric.litre.plural') %>
            </span>
        </li>
        <li>
          <div class="flex flex-row gap-2 mt-2">
            <%= link_to edit_admin_dashboard_car_path(car) do %>
              <button type="button" class="text-white bg-accent-500 hover:bg-accent-600 focus:outline-none focus:ring-4 focus:ring-accent-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-accent-600 dark:hover:bg-accent-700 dark:focus:ring-accent-900"><%= I18n.t('actions.edit') %></button>
            <% end %>
            <%= link_to admin_dashboard_car_schedules_path(car_id: car.id) do %>
              <button type="button" class="text-white bg-gray-500 hover:bg-gray-600 focus:outline-none focus:ring-4 focus:ring-gray font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:focus:ring-gray"><%= I18n.t('cars.actions.schedules') %></button>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>