<div class="animate-in fade-in duration-1000" id="cars_car_card-<%= car.id %>">
  <div class="flex justify-center">
    <div class="rounded-lg shadow-lg bg-white max-w-sm <%= car.discarded? ? 'bg-red-100' : 'bg-white' %>">
      <div class="rounded-t-lg">
        <%= render partial: 'common/cars/car/carousel', locals: { car: car } %>
      </div>
      <div class="p-6">
        <h5 class="text-gray-900 text-xl font-medium mb-2">
          <%= I18n.t("cars.brands.#{car.brand}") %>
          <%= car.name %>
        </h5>
        <p class="text-gray-700 text-base mb-4">
        <ul>
          <li>
            <%= Car.human_attribute_name(:price_in_eur) %> :
            <%= car.price_in_eur %> EUR
          </li>
          <li>
            <%= Car.human_attribute_name(:deposit) %> :
            <%= car.deposit %> EUR
          </li>
          <li>
            <%= Car.human_attribute_name(:engine_type) %> :
            <%= I18n.t("cars.engine_types.#{car.engine_type}") %>
          </li>
          <li>
            <%= Car.human_attribute_name(:transmission) %> :
            <%= I18n.t("cars.transmission_types.#{car.transmission}") %>
          </li>
          <li>
            <%= Car.human_attribute_name(:gas_consumption_range) %> :
            <%= car.gas_consumption_range.begin %> - <%= car.gas_consumption_range.end %> L
          </li>
        </ul>
        </p>
        <%= link_to edit_admin_dashboard_car_path(car) do %>
          <button type="button" class=" inline-block px-6 py-2.5 bg-accent text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-accent hover:shadow-lg focus:bg-accent focus:shadow-lg focus:outline-none focus:ring-0 active:bg-accent active:shadow-lg transition duration-150 ease-in-out"><%= I18n.t('actions.edit') %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>