<div class="flex flex-col">
  <div class="flex justify-center items-center md:items-start flex-col md:flex-row gap-x-4 gap-y-4">
    <%= render partial: 'search_form' %>
    <%= link_to new_admin_dashboard_car_path, class: 'w-48' do %>
      <button class="text-white w-full bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
        <%= I18n.t('forms.buttons.new') %>
      </button>
    <% end %>
  </div>
  <div class="flex flex-wrap justify-center gap-5 p-4">
    <% @cars.each do |car| %>
      <%= render partial: 'index_car_view', locals: { car: car } %>
    <% end %>
  </div>
</div>
