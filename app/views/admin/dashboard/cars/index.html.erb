<% no_turbo_cache %>
<% page_title I18n.t('navbar.links.cars') %>
<div class="flex flex-col">
  <div class="animate-in fade-in duration-1000 flex justify-center items-center flex-col gap-x-4 gap-y-4 p-4">
    <%= link_to new_admin_dashboard_car_path, class: 'w-48 self-center md:self-end' do %>
      <button class="text-white w-full bg-accent hover:bg-accent focus:ring-4 focus:ring-accent font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-accent dark:hover:bg-accent focus:outline-none dark:focus:ring-accent">
        <%= I18n.t('forms.buttons.new') %>
      </button>
    <% end %>
    <%= render partial: 'common/cars/search_form', locals: { url: admin_dashboard_cars_path } %>
  </div>
  <hr class="h-px bg-gray-200 border-0 dark:bg-gray-700 mx-5">
  <div id="cars" class="flex flex-wrap justify-center gap-5 p-4 scroll-smooth">
  </div>
</div>

<div class="bottom-1 relative">
  <%= turbo_frame_tag "pagination", src: admin_dashboard_cars_turbo_pagination_path, loading: :lazy %>
</div>
