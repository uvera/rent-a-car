<div class="w-full md:w-auto" id="inquires_inquire_card-<%= inquire.id %>" data-controller="transition">
  <div class="rounded-lg shadow-lg w-full bg-cultured flex-justify-center max-w-sm">
    <div class="p-6">
      <ul class="w-full p-4">
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.id') %>:
      </span>
          <span class="break-words">
      <%= inquire.friendly_id %>
      </span>
        </li>
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.arrival_flight_number') %>:
      </span>
          <span>
      <%= inquire.arrival_flight_number %>
      </span>
        </li>
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.arrival_flight_at') %>:
      </span>
          <span>
      <%= I18n.l(inquire.arrival_flight_at) %>
      </span>
        </li>
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.driver_license_number') %>:
      </span>
          <span>
      <%= inquire.driver_license_number %>
      </span>
        </li>
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.passport_number') %>:
      </span>
          <span>
      <%= inquire.passport_number %>
      </span>
        </li>
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.phone_number') %>:
      </span>
          <span>
      <%= inquire.phone_number %>
      </span>
        </li>
        <% if inquire.telegram_phone_number? %>
          <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.telegram_phone_number') %>:
      </span>
            <span>
      <%= inquire.telegram_phone_number %>
      </span>
          </li>
        <% end %>
        <% if inquire.viber_phone_number? %>
          <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.viber_phone_number') %>:
      </span>
            <span>
      <%= inquire.viber_phone_number %>
      </span>
          </li>
        <% end %>
        <% if inquire.whatsapp_phone_number? %>
          <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.whatsapp_phone_number') %>:
      </span>
            <span>
      <%= inquire.whatsapp_phone_number %>
      </span>
          </li>
        <% end %>
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.pickup_at') %>:
      </span>
          <span>
      <%= I18n.l(inquire.pickup_at) %>
      </span>
        </li>
        <li class="border-b border-gray-200 w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.return_at') %>:
      </span>
          <span>
      <%= I18n.l(inquire.return_at) %>
      </span>
        </li>
        <li class="w-full p-1">
      <span>
        <%= I18n.t('landing.car_inquires.labels.status') %>:
      </span>
          <span>
      <%= I18n.t(inquire.status, scope: 'landing.car_inquires.status') %>
      </span>
        </li>
        <li class="flex flex-col md:flex-row gap-2">
          <%= form_with model: inquire, id: dom_id(inquire), url: approve_admin_dashboard_car_inquire_path(inquire), method: :post do %>
            <button type="submit" class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800 w-full">
              <%= I18n.t('forms.inquires.buttons.approve') %>
            </button>
          <% end %>
          <%= form_with model: inquire, id: dom_id(inquire), url: refuse_admin_dashboard_car_inquire_path(inquire), method: :post do %>
            <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 w-full">
              <%= I18n.t('forms.inquires.buttons.refuse') %>
            </button>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>