<%= form_for configuration, url: { controller: 'admin/dashboard/configurations',
action: configuration.new_record? ? 'create' : 'update' } do |f| %>
<div class="flex flex-col w-2/3 justify-center m-auto h-full gap-y-4">
  <h2><%= I18n.t("configurations.#{configuration.key}") %></h2>
  <%= f.hidden_field :key, value: configuration.key %> <%
  I18n.available_locales.each do |locale| %>
  <div>
    <span class="font-bold"><%= I18n.t("locales.names.#{locale}") %></span>
    <%= f.fields_for :value do |builder| %> <%= builder.text_area locale, value:
    configuration.value.try(:[], locale), rows: '5' %> <% end %>
  </div>
  <% end %> <%= form_buttons(back_link: admin_dashboard_configurations_path) %>
</div>
<% end %>
