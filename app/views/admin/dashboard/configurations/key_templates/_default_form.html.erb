<%= form_for configuration, url: { controller: 'admin/dashboard/configurations', action: configuration.new_record? ? 'create' : 'update' } do |f| %>
  <div class="flex flex-col w-2/3 justify-center m-auto h-full gap-y-4">
    <h2>
      <%= I18n.t("configurations.#{configuration.key}") %>
    </h2>
    <%= f.hidden_field :key, value: configuration.key %>
    <%= f.text_area :value, rows: '40', class: 'resize-none block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    <%= render partial: 'form_buttons' %>
  </div>
<% end %>
