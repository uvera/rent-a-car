<%= form_for configuration, builder: ReactFormBuilder, url: { controller: 'admin/dashboard/configurations', action: configuration.new_record? ? 'create' : 'update' } do |f| %>
  <div class="flex flex-col w-2/3 justify-center m-auto h-full gap-y-4">
    <%= f.hidden_field :key, value: configuration.key %>
    <%= f.tag_input :value %>
    <%= render partial: 'form_buttons' %>
  </div>
<% end %>
