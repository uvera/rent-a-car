<div class="w-full md:w-auto" id="cars_car_card-<%= car.id %>" data-controller="transition">
  <%= signal_flowbite_reinit %>
  <div class="rounded-lg shadow-lg w-full bg-cultured flex-justify-center">
    <div>
      <%= render partial: 'common/cars/car/carousel', locals: { car: car, show_modal: false } %>
    </div>
    <div class="p-6">
      <h5 class="text-gray-900 text-xl font-medium mb-2 break-words">
        <%= I18n.t("cars.brands.#{car.brand}") %>
        <%= car.name %>
      </h5>
      <p class="text-gray-700 text-base mb-4">
      <ul>
        <li>
          <%= Car.human_attribute_name(:price_in_eur) %>:
          <%= car.price_in_eur %> <%= I18n.t('units.currency.eur.plural') %>
        </li>
        <li>
          <%= Car.human_attribute_name(:deposit) %>:
          <%= car.deposit %> <%= I18n.t('units.currency.eur.plural') %>
        </li>
        <li>
          <%= Car.human_attribute_name(:engine_type) %>:
          <%= I18n.t("cars.engine_types.#{car.engine_type}") %>
        </li>
        <li>
          <%= Car.human_attribute_name(:transmission) %>:
          <%= I18n.t("cars.transmission_types.#{car.transmission}") %>
        </li>
        <li>
          <%= Car.human_attribute_name(:gas_consumption_range) %>:
          <%= number_with_precision(car.gas_consumption_range.begin, precision: 1, strip_insignificant_zeros: true) %>
          - <%= number_with_precision(car.gas_consumption_range.end, precision: 1, strip_insignificant_zeros: true) %> <%= I18n.t('units.volumetric.litre.plural') %>
        </li>
        <li>
          <%= Car.human_attribute_name(:release_date) %>:
          <%= car.release_date.year %>
        </li>
        <div class="flex flex-col gap-y-5 xs:gap-y-0 xs:flex-row sm:items-center mt-4">
          <% if car.youtube_link? %>
            <li>
              <%= link_to I18n.t('landing.home.youtube_link'), url_for(car.youtube_link), class: 'text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900' %>
            </li>
          <% end %>

          <li>
            <%= link_to I18n.t('landing.cars.detail_button'), car, class: "text-white bg-accent hover:bg-accent-600 focus:outline-none focus:ring-4 focus:ring-accent font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:focus:ring-accent" %>
          </li>

        </div>
      </ul>
      </p>
    </div>
  </div>
</div>
